@model IEnumerable<Hrm_SystemCore.Models.tblDepartment>

@{
    ViewBag.Title = "Departments";
}

<h2>Departments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-bordered table-condensed" >
    <tr>
        <th>
           Name
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dpt_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dpt_desc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.dpt_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.dpt_id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.dpt_id })
        </td>
    </tr>
}

</table>

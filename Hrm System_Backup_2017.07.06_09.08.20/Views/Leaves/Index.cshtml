@model IEnumerable<Hrm_System.Models.tblLeave>

@{
    ViewBag.Title = "Leave ";
}

<h2>Leave</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-bordered table-condensed" id="table1" >
   <thead>
    <tr>
        <th>
              Name
        </th>
        <th>
            Leave Type
        </th>
        <th>
            Balance 
        </th>
        <th>
           Period
        </th>
    </tr>
</thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblEmployee.emp_name)  @Html.DisplayFor(modelItem => item.tblEmployee.emp_lname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblLvType.lvtyp_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lv_bal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lv_period.Value.Year)
        </td>
    </tr>
}

</table>

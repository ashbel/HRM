@model IEnumerable<Hrm_System.Models.tblProvince>

@{
    ViewBag.Title = "Provinces";
}

<h2>Provinces</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-bordered table-condensed" >
    <tr>
        <th>
            Province Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.prov_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.prov_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.prov_id  }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.prov_id  })
        </td>
    </tr>
}

</table>

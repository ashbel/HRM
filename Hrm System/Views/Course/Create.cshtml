@model Hrm_System.Models.tblCours

@{
    ViewBag.Title = "HRM - Courses";
}

<h2>Create Course</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.course_nm,"Course Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-12 col-md-3">
                @Html.EditorFor(model => model.course_nm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.course_nm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.course_dur,"Course Duration", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-12 col-md-3">
                @Html.EditorFor(model => model.course_dur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.course_dur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.course_descr,"Course Desctiption", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-12 col-md-3">
                @Html.EditorFor(model => model.course_descr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.course_descr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.type_id, "Course Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-12 col-md-3">
                @Html.DropDownList("type_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.type_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-12 col-md-3">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model Hrm_System.Models.tblPosition

@{
    ViewBag.Title = "Job Positions";
}

<h2>Create Position</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>


        <div class="editor-label">
           Job Title
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.pos_title)
            @Html.ValidationMessageFor(model => model.pos_title)
        </div>

        <div class="editor-label">
            Job Description
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.pos_desc)
            @Html.ValidationMessageFor(model => model.pos_desc)
        </div>
        <div class="editor-label">
            Job Level
        </div>
        <div class="editor-field">
            @Html.DropDownList("lvl_id", String.Empty)
            @Html.ValidationMessageFor(model => model.lvl_id)
        </div>
        <div class="editor-label">
            Department
        </div>
        <div class="editor-field">
            @Html.DropDownList("dpt_id", String.Empty)
            @Html.ValidationMessageFor(model => model.dp_id)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

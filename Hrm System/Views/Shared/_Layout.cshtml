<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-{version}.js")"></script>
    <script src="@Url.Content("~/Scripts/knockout-{version}.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-*")"></script>
    <link href="@Url.Content("~/Content/FooterStyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/NavBar.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.2.902/kendo.common.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.2.902/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.2.902/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.2.902/kendo.blueopal.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.2.902/kendo.dataviz.blueopal.min.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/kendo/2015.2.902/jquery.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2015.2.902/jszip.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2015.2.902/kendo.all.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2015.2.902/kendo.aspnetmvc.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
</head>
<body>
      <div  class="row" style="background-color:#EEEEEe;">        
          <div style="padding-top:5px; padding-bottom:5px;">
              <div class="col-md-6">
                  <h4 style="padding-left:20px">Your Company Name Here</h4>
              </div>
              <div class="col-md-6 text-right ">
                  <h4 style="padding-right:20px">
                          <span data-placement="left" data-toggle="tooltip" title="Notifications">
                          <span class="glyphicon glyphicon-inbox fa-lg" aria-hidden="true"></span>
                          </span>
                          <span data-placement="left" data-toggle="tooltip" title="Settings">
                              <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                          </span>
                          <span data-placement="left" data-toggle="tooltip" title="Help Docs">
                              <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                          </span>
                          <span data-placement="left" data-toggle="tooltip" title="LogOut">
                              <a href="@Url.Action("Logoff","Home")"><span class="glyphicon glyphicon-off" aria-hidden="true"></span></a>
                          </span>
</h4>
              </div>
          </div>          
      </div>
    <div class="topnav" id="myTopnav">
        <a href="@Url.Action("Home", "Home")">Home</a>
        <a href="@Url.Action("Index", "Employee")">Employees</a>
        <a href="@Url.Action("Index", "Employee")">Contracts</a>
        <a href="@Url.Action("Index", "Leaves")">Leave</a>
        <a href="@Url.Action("Index", "Training")">Training</a>
        <a href="@Url.Action("Index", "Employee")">Perfomance</a>
        <a href="@Url.Action("Index", "Payroll")">Payroll</a>       
        <a href="@Url.Action("Index", "Leave")">Configurations</a>
    </div>
    <div class="subnav" id="mySubnav">
        <div class="row">
                <div class="col-md-6">
                    
                </div>
                <div class="col-md-6 text-right ">
                    <h4 style="padding-right:20px">
                        @HttpContext.Current.Session["Name"]                        
                    </h4>
                </div>
            </div>
        </div>
        <p><br /></p>
<div class="content">
    <div style="padding-left:10px;padding-right:10px;">
        @RenderBody()
    </div>
</div>   
    @RenderSection("scripts", required: false)
</body>
</html>

            .Items(children =>
            {
                children.Add().Text("HR Reports").Action("Index", "HRReports");
                children.Add().Text("Recruitment Reports").Action("Index", "RecruiReports");
                children.Add().Text("Employee Reports").Action("Index", "EmployeeReports");

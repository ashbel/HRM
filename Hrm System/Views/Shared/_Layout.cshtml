      .Name("Menu")
      .Items(items =>
      {
          items.Add().Text("Home").Action("Home","Home");
          items.Add().Text("Organisation")
          .Items(children =>
          {
              children.Add().Text("Companies").Action("Index", "Companies");
              children.Add().Text("Stations").Action("Index", "Stations");
              children.Add().Text("Departments").Action("Index", "Departments");
              children.Add().Text("Projects").Action("Index", "Projects");
              children.Add().Text("Organisation News").Action("Index", "News");
              children.Add().Text("Policies").Action("Index", "Policies");
              children.Add().Text("Announcements").Action("Index", "Announcements");
              children.Add().Text("System Settings").Action("Index", "Settings");
              children.Add().Text("System Logs").Action("Index", "Logs");

          });
          items.Add().Text("Recruitment")
          .Items(children =>
          {
              children.Add().Text("Dashboard").Action("Index", "Recruitment");
              children.Add().Text("Screening").Action("Index", "Screening");
              children.Add().Text("Job Post Requirements").Action("Index", "PostsRq");
              children.Add().Text("Job Posts").Action("Index", "JobPosts");
              children.Add().Text("Job Candidates").Action("Index", "Candidates");
              children.Add().Text("Shortlist Candidates").Action("Index", "ShortCandidates");
              children.Add().Text("Job Tests").Action("Index", "JobTests");
              children.Add().Text("Job Interview").Action("Index", "JobIntvw");      

          });
          items.Add().Text("Employees")
            .Items(children =>
            {
                children.Add().Text("Dashboard").Action("Index", "EmpDash");
                children.Add().Text("Employees").Action("Index", "Employee");
                children.Add().Text("Contracts").Action("Index", "Contracts");
                children.Add().Text("Assignments").Action("Index", "Assignments");
                children.Add().Text("Requisitions").Action("Index", "Requisitions");
                children.Add().Text("Transfers").Action("Index", "Transfers");
                children.Add().Text("Resignations").Action("Index", "Resignations");
                children.Add().Text("Achievements").Action("Index", "Achievements");
                children.Add().Text("Travels").Action("Index", "Travels");
                children.Add().Text("Promotions").Action("Index", "Promotions");
                children.Add().Text("Complaints").Action("Index", "Complaints");
                children.Add().Text("Warning").Action("Index", "Warning");
                children.Add().Text("Memos").Action("Index", "Memos");
                children.Add().Text("Terminations").Action("Index", "Terminations");
                children.Add().Text("Polls").Action("Index", "Polls");
                children.Add().Text("Perfomance Evaluation").Action("Index", "PerfEval");
                children.Add().Text("Employee Exit").Action("Index", "EmployeeExit");

            });

            .Items(children =>
            {
                children.Add().Text("Scheduler").Action("Index", "Scheduler");
                children.Add().Text("Attendance").Action("Index", "Attendance");
                children.Add().Text("Employee Hours").Action("Index", "EmployeeHours");
                children.Add().Text("Leaves").Action("Index", "Leaves");
                children.Add().Text("Worksheet").Action("Index", "Worksheet");
                children.Add().Text("Work Shifts").Action("Index", "tblWorkShifts");
                children.Add().Text("Holidays").Action("Index", "Holidays");

            });
          items.Add().Text("Payroll")
            .Items(children =>
            {
                children.Add().Text("Payroll Dashboard").Action("Index", "PayrollDash");
                children.Add().Text("Salary").Action("Index", "Salary");
                children.Add().Text("Salary Payslips").Action("Index", "Payslips");
                children.Add().Text("Payroll Structure").Action("Index", "PayStructure");
                children.Add().Text("Hourly Wages").Action("Index", "Wages");
                children.Add().Text("Deductions").Action("Index", "Deductions");
                children.Add().Text("Bonuses").Action("Index", "Bonuses");
                children.Add().Text("Commissions").Action("Index", "Commissions");
                children.Add().Text("Adjustements").Action("Index", "Adjustements");
